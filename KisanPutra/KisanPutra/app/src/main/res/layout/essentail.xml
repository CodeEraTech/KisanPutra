        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bottom_cornor_bg"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_ese_images"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_150dp"
                android:layout_margin="@dimen/sp_10"
                android:layout_gravity="center"
                android:src="@drawable/logo_2"/>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#909091"
                tools:text="Fresh Shakti milk" />
            <TextView
                android:id="@+id/txt_qnty"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#909091"
                tools:text="50 ml" />

            <TextView
                android:id="@+id/txt_mrp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#909091"
                tools:text="MRP 500 RS" />
            <Button
                android:id="@+id/btn_subscribe"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_50dp"
                android:paddingRight="@dimen/dimen_50dp"
                android:text="SUBSCRIBE"
                android:singleLine="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#CB8C79"
                android:background="@drawable/subs"/>

            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@color/green_btn"/>



        </LinearLayout>

