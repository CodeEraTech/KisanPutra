<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_pus"
        android:layout_width="20dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/plus_gray"
        android:padding="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/img_minus"
        android:layout_width="20dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/minus_gray"
        android:padding="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:id="@+id/linear_contain"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_about_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About The Product"
            android:textColor="@color/black_1"
            android:textSize="16sp"
            android:padding="3dp"
            android:layout_margin="3dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_about_product_detail_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About The Product detail 1"
                android:textColor="@color/black_1"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="3dp"
                android:layout_margin="3dp" />

            <TextView
                android:id="@+id/txt_about_product_detail_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About The Product detail 2"
                android:textColor="@color/gray_66"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="3dp"
                android:layout_margin="3dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_below="@+id/linear_contain"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_dc" />
</RelativeLayout>